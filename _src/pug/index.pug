extend _template

block content
  .p-hero
    .l-outer
      .p-hero__inner.l-inner
        h1.p-hero__head H1

  main.l-main
    section.c-section.p-xxx
      .l-outer
        .c-section__inner.p-xxx__inner.l-inner
          h2.c-section__head.p-xxx__head Heading
          .c-section__content.p-xxx__content
            p Content

    section.c-section.p-test
      .l-outer
        .c-section__inner.p-test__inner.l-inner
          h2.c-section__head.p-test__head Form
          .c-section__content.p-test__content
            form.c-form#js-form
              .c-form-inputs
                .c-form-inputs__group
                  label.c-form-inputs__label
                    span.__required 必須
                    | 氏名
                  .c-form-inputs__input
                    input(type="text", name="name", id="name", required, placeholder="例）氏名 太郎")
                    .c-form-inputs__error-message(data-js-error-message="name")
                .c-form-inputs__group
                  label.c-form-inputs__label
                    span.__required 必須
                    | メールアドレス
                  .c-form-inputs__input
                    input(type="email", name="email", id="email", required, pattern="^[a-zA-Z0-9-_\.]+@[a-zA-Z0-9-_\.]+$", title="メールアドレスの形式で入力してください", placeholder="例）example@ex.com")
                    .c-form-inputs__error-message(data-js-error-message="email")
                .c-form-inputs__group
                  label.c-form-inputs__label
                    span.__required 必須
                    | 電話番号
                  .c-form-inputs__input
                    input(type="tel", name="tel", id="tel", required, pattern="^0[0-9]{9,10}$", title="電話番号の形式で入力してください", placeholder="例）09012345678")
                    .c-form-inputs__error-message(data-js-error-message="tel")
                    .c-form-inputs__caption: small ハイフン無しで入力してください
                .c-form-inputs__group
                  label.c-form-inputs__label
                    span.__required 必須
                    | 年齢
                  .c-form-inputs__input
                    select(name="selectbox", id="selectbox", required, data-required-error="いずれかを選択してください")
                      option(value="") 選択してください
                      option(value="1") 〜19歳
                      option(value="2") 20代
                      option(value="3") 30代
                      option(value="4") 40代
                      option(value="5") 50代
                      option(value="6") 60代〜
                    .c-form-inputs__error-message(data-js-error-message="selectbox")
                .c-form-inputs__group--checkbox
                  label.c-form-inputs__label
                    span.__required 必須
                    | 地域
                  .c-form-inputs__input
                    .l-flex
                      div
                        input(type="checkbox", name="aria", id="aria-tokyo" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="aria-tokyo") 東京
                      div
                        input(type="checkbox", name="aria", id="aria-chiba" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="aria-chiba") 千葉
                      div
                        input(type="checkbox", name="aria", id="aria-saitama" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="aria-saitama") 埼玉
                      div
                        input(type="checkbox", name="aria", id="aria-kanagawa" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="aria-kanagawa") 神奈川
                      div
                        input(type="checkbox", name="aria", id="aria-other" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="aria-other") その他
                    .c-form-inputs__error-message(data-js-error-message="aria")
                .c-form-inputs__group--radio
                  label.c-form-inputs__label
                    span.__required 必須
                    | 住まい
                  .c-form-inputs__input
                    .l-flex
                      div
                        input(type="radio", name="house", id="house-my-home" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="house-my-home") 持ち家
                      div
                        input(type="radio", name="house", id="house-rent" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="house-rent") 賃貸
                      div
                        input(type="radio", name="house", id="house-other" required, data-required-error="最低でも1つ以上、チェックを入れてください")
                        label(for="house-other") その他
                    .c-form-inputs__error-message(data-js-error-message="house")
                .c-form-inputs__group
                  label.c-form-inputs__label
                    span.__any 任意
                    | 任意項目
                  .c-form-inputs__input
                    textarea(name="any")
                .c-form-inputs__group
                  div.u-w100p
                    .l-flex.__col-center
                      input(type="checkbox", name="privacy-policy", id="privacy-policy", required, data-required-error="プライバシーポリシーに同意される場合、チェックを入れてください")
                      label(for="privacy-policy")
                        a.u-link(href="#", target="_blank", rel="noreferrer noopener") プライバシーポリシー
                        | に同意する
                    .l-flex.__col-center
                      .c-form-inputs__error-message(data-js-error-message="privacy-policy")
              .c-form-submit
                button.c-btn(type="submit") 送信する
